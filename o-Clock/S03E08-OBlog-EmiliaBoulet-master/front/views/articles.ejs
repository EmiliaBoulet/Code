<%- include ('partials/head') %>

<div class="pure-g">
    <%- include ('partials/header') %>
    <main class="content pure-u-1 pure-u-md-3-4 pure-u-xl-5-6">
        <article class="card pure-u-1 pure-u-lg-1-2 pure-u-xl-1-3">
            <header>
                <img class="card-img pure-img" src="/images/<%= articleFound.img %>" alt="<%= articleFound.img_alt %>">
                <h2> <%= articleFound.title %></h2>
                <div class="card-meta">
                    Par <a href="#"><%= articleFound.author %> </a>
                    dans la catégorie <a href="category/<%= articleFound.category %>"><%= articleFound.category %> </a>
                </div>
            </header>
            <p> <%= articleFound.text %></p>
        </article>
        <footer>
            <a class="pure-button" href="/">Retour à l'accueil</a>
        </footer>
    </main>
</div>

